<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp"
    cardView:cardCornerRadius="2dp">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    >

    <FrameLayout
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/song_title"
            android:gravity="center_vertical"
            android:text="Sanam Re - Arjit Singh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textColor="@color/TittleColor"
            android:maxLines="1"/>
    </FrameLayout>

    <FrameLayout
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/song_link"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="www.google.com"
            android:textColor="@color/LinkColor"
            android:textStyle="normal"
            android:textSize="12dp"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="5dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/popping_lyrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re.tu mera sanam hua re."
            android:maxLines="4"
            android:textColor="@color/TextColor"
            android:textSize="12dp"/>
    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:weightSum="3">

        <FrameLayout
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie"
                    android:textColor="@color/TittleColor"
                    android:textSize="10dp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/movie"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:text="Sanam Re"
                    android:maxLines="2"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Singers"
                    android:textColor="@color/TittleColor"
                    android:textSize="10dp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/singers"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:text="Shankar dev"
                    android:maxLines="2"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lyricist"
                    android:textColor="@color/TittleColor"
                    android:textSize="10dp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/lyricist"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="12dp"
                    android:text="Kumar Shah"
                    android:maxLines="2"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>




</LinearLayout>


</android.support.v7.widget.CardView>