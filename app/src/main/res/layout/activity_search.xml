<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
<TextView
    android:gravity="center"
    android:textSize="@dimen/mls_font_size_search"
    android:textColor="#ffffff"
    android:background="@color/PrimaryColor"
    android:padding="4dp"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:text="@string/logo_character"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/PrimaryColor"
        android:id="@+id/seach_bar_section"
        android:layout_below="@+id/title"
        android:padding="2dp"
        android:weightSum="1">

        <EditText
            android:hint="\t\t\t\t\t\t\t\t\t\t\tEnter Song Name"
            android:id="@+id/search_input"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search"/>

        <TextView
            android:id="@+id/fire_search_btn"
            android:textColor="@color/PrimaryColor"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:background="@drawable/search_button"
            android:text="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <include android:id="@+id/pagination" layout="@layout/pagination" android:layout_below="@+id/seach_bar_section" android:layout_height="36dp" android:layout_width="match_parent"/>

<ListView
    android:dividerHeight="4dp"
    android:padding="4dp"
    android:id="@+id/search_result_list"
    android:layout_below="@+id/pagination"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</RelativeLayout>
